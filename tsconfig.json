{
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "jsx": "react",
      "importHelpers": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "baseUrl": "./",
      "paths": {
        "@/*": [
          "src/*"
        ]
      },
    },
    "include": [
      "src/**/*.tsx",
      "webpack.config.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
